namespace OOP1WritePlayerClass
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Player player = new Player();

            player.WritePlayerInfo();
        }
    }

    class Player
    {
        public string Name;
        public int Age;
        public string Sex;
        public int Level;
        public int PlayerStrength;
        public int PlayerAgility;
        public int PlayerVitality;
        public int PlayerEnergy;

        public Player()
        {
            Name = "Sergey";
            Age = 33;
            Sex = "male";
            Level = 1;
            PlayerStrength = 1;
            PlayerAgility = 1;
            PlayerVitality = 1;
            PlayerEnergy = 1;
        }

        public Player(string name, int age, string sex, int level, int strengthValue, int agilityValue, int vitalityValue, int energyValue)
        {
            Name = name;
            Age = age;
            Sex = sex;
            Level = level;
            PlayerStrength = strengthValue;
            PlayerAgility = agilityValue;
            PlayerVitality = vitalityValue;
            PlayerEnergy = energyValue;
        }

        public void WritePlayerInfo()
        {
            Console.WriteLine($"Player name: {Name}");
            Console.WriteLine($"Age: {Age}");
            Console.WriteLine($"Sex: {Sex}");
            Console.WriteLine($"Level: {Level}");
            Console.WriteLine($"Strength: {PlayerStrength}");
            Console.WriteLine($"Agility: {PlayerAgility}");
            Console.WriteLine($"Vitality: {PlayerVitality}");
            Console.WriteLine($"Energy: {PlayerEnergy}");

            Console.ReadLine();
        }
    }
}
