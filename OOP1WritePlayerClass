namespace OOP1WritePlayerClass
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Player player = new Player();

            player.WriteInfo();
        }
    }

    class Player
    {
        public string Name;
        public int Age;
        public string Sex;
        public int Level;
        public int StrengthValue;
        public int AgilityValue;
        public int VitalityValue;
        public int EnergyValue;

        public Player()
        {
            Name = "Sergey";
            Age = 33;
            Sex = "male";
            Level = 1;
            StrengthValue = 1;
            AgilityValue = 1;
            VitalityValue = 1;
            EnergyValue = 1;
        }

        public Player(string name, int age, string sex, int level, int strengthValue, int agilityValue, int vitalityValue, int energyValue)
        {
            Name = name;
            Age = age;
            Sex = sex;
            Level = level;
            StrengthValue = strengthValue;
            AgilityValue = agilityValue;
            VitalityValue = vitalityValue;
            EnergyValue = energyValue;
        }

        public void WriteInfo()
        {
            Console.WriteLine($"Player name: {Name}");
            Console.WriteLine($"Age: {Age}");
            Console.WriteLine($"Sex: {Sex}");
            Console.WriteLine($"Level: {Level}");
            Console.WriteLine($"Strength: {StrengthValue}");
            Console.WriteLine($"Agility: {AgilityValue}");
            Console.WriteLine($"Vitality: {VitalityValue}");
            Console.WriteLine($"Energy: {EnergyValue}");

            Console.ReadLine();
        }
    }
}
