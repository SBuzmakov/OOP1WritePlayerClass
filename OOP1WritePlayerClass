namespace OOP1WritePlayerClass
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Player player = new Player();

            player.WriteInfo();
        }
    }

    class Player
    {
        private string Name;
        private int Age;
        private string Sex;
        private int Level;
        private int StrengthValue;
        private int AgilityValue;
        private int VitalityValue;
        private int EnergyValue;

        public Player(string name = "Sergey", int age = 33, string sex = "male", int level = 1, int strengthValue = 1, int agilityValue = 1, int vitalityValue = 1,
            int energyValue = 1)
        {
            Name = name;
            Age = age;
            Sex = sex;
            Level = level;
            StrengthValue = strengthValue;
            AgilityValue = agilityValue;
            VitalityValue = vitalityValue;
            EnergyValue = energyValue;
        }

        public void WriteInfo()
        {
            Console.WriteLine($"Player name: {Name}");
            Console.WriteLine($"Age: {Age}");
            Console.WriteLine($"Sex: {Sex}");
            Console.WriteLine($"Level: {Level}");
            Console.WriteLine($"Strength: {StrengthValue}");
            Console.WriteLine($"Agility: {AgilityValue}");
            Console.WriteLine($"Vitality: {VitalityValue}");
            Console.WriteLine($"Energy: {EnergyValue}");

            Console.ReadLine();
        }
    }
}
